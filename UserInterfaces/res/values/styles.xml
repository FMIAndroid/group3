<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:paddingRight">@dimen/app_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:paddingRight">@dimen/app_padding</item>
        <item name="android:paddingBottom">@dimen/app_padding</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/transparent_black</item>
    </style>

</resources>